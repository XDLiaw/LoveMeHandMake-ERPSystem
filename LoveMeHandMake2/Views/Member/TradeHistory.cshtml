@model LoveMeHandMake2.Models.ViewModels.MemberTradeHistoryViewModel

@{
    ViewBag.Title = "消费纪录";
}

<h2>消费纪录</h2>


@using (Html.BeginForm("TradeHistory", "Member", FormMethod.Post))
{
    <div class="container">
        <div class="col-md-3">
            <h4>@Model.member.Name</h4>
        </div>
        <div class="col-md-3">
            @Html.EditorFor(model => model.SearchDateStart, new { htmlAttributes = new { id = "SearchDateStart", name = "SearchDateStart", @class = "form-control calendarBox", placeholder = "日期(起)" } })
        </div>
        <div class="col-md-3">
            @Html.EditorFor(model => model.SearchDateEnd, new { htmlAttributes = new { id = "SearchDateEnd", name = "SearchDateEnd", @class = "form-control calendarBox", placeholder = "日期(讫)" } })
        </div>
        <div class="col-md-3">
            <input type="submit" value="搜寻" class="btn btn-default" />
        </div>
    </div>
}    
<br />


<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TradeOrderList.FirstOrDefault().TradeDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TradeOrderList.FirstOrDefault().OrderID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TradeOrderList.FirstOrDefault().Store)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TradeOrderList.FirstOrDefault().Teacher)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TradeOrderList.FirstOrDefault().ChargeByPoint)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TradeOrderList.FirstOrDefault().ChargeByCash)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TradeOrderList.FirstOrDefault().ChargeByCreditCard)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TradeOrderList.FirstOrDefault().ChargeByMallCard)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TradeOrderList.FirstOrDefault().RewardMoney)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TradeOrderList.FirstOrDefault().RewardPoint)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TradeOrderList.FirstOrDefault().TotalIncomeMoney)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.TradeOrderList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TradeDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Store.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChargeByPoint)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChargeByCash)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChargeByCreditCard)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChargeByMallCard)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RewardMoney)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RewardPoint)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalIncomeMoney)
            </td>
            <td>
                @Html.ActionLink("明细", "TradeDetail", new { id = item.ID })
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("回到会员", "Index")
</div>
